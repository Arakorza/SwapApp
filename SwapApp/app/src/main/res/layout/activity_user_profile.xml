<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".SecondInterface.Profile.UserProfile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/userInfoContainer_UserProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_UserProfile"
            android:layout_alignTop="@id/username_UserProfile"
            android:layout_alignBottom="@id/ratingLinLayout_UserProfile"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="-5dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="-6dp"
            android:layout_toRightOf="@id/pfp_UserProfile"
            android:background="@drawable/text_view_border_rounded" />

        <TextView
            android:id="@+id/title_UserProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif"
            android:text="Profile"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="60dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/pfp_UserProfile"
            android:layout_width="116dp"
            android:layout_height="116dp"
            android:layout_below="@+id/title_UserProfile"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="32dp"
            android:scaleType="fitCenter"
            android:background="#606060"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_UserProfile"
            android:layout_alignLeft="@id/pfp_UserProfile"
            android:layout_alignTop="@id/pfp_UserProfile"
            android:layout_alignRight="@id/pfp_UserProfile"
            android:layout_alignBottom="@id/pfp_UserProfile"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="-2.4dp"
            android:layout_marginTop="-2.4dp"
            android:layout_marginRight="-2.4dp"
            android:layout_marginBottom="-2.4dp"
            android:background="@drawable/text_view_border_rounded" />

        <TextView
            android:id="@+id/username_UserProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_UserProfile"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="35dp"
            android:layout_toRightOf="@id/pfp_UserProfile"
            android:fontFamily="sans-serif"
            android:text="Username"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/email_UserProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username_UserProfile"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="35dp"
            android:layout_toRightOf="@id/pfp_UserProfile"
            android:fontFamily="sans-serif"
            android:text="Email"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/numOfTrades_UserProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_UserProfile"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="35dp"
            android:layout_toRightOf="@id/pfp_UserProfile"
            android:fontFamily="sans-serif"
            android:text="# Of Trades"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ratingLinLayout_UserProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/numOfTrades_UserProfile"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="35dp"
            android:layout_toRightOf="@id/pfp_UserProfile"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rating1_UserProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="-3dp"
                android:paddingRight="-3dp"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:src="@drawable/ic_baseline_star_24" />

            <ImageView
                android:id="@+id/rating2_UserProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="-3dp"
                android:paddingRight="-3dp"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:src="@drawable/ic_baseline_star_24" />

            <ImageView
                android:id="@+id/rating3_UserProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="-3dp"
                android:paddingRight="-3dp"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:src="@drawable/ic_baseline_star_24" />

            <ImageView
                android:id="@+id/rating4_UserProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="-3dp"
                android:paddingRight="-3dp"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:src="@drawable/ic_baseline_star_24" />

            <ImageView
                android:id="@+id/rating5_UserProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="-3dp"
                android:paddingRight="-3dp"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:src="@drawable/ic_baseline_star_24" />

            <TextView
                android:id="@+id/numOfRatings_UserProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:paddingLeft="2dp"
                android:paddingRight="0dp"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:textStyle="bold" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/contactInfoContainer_UserProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ratingLinLayout_UserProfile"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/text_view_border_rounded">

            <TextView
                android:id="@+id/contactInfoTitle_UserProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="0dp"
                android:fontFamily="sans-serif"
                android:text="Contact Information"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/contactInfo_UserProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/contactInfoTitle_UserProfile"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="3dp"
                android:fontFamily="sans-serif"
                android:text=""
                android:textAlignment="viewStart"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bioContainer_UserProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contactInfoContainer_UserProfile"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/text_view_border_rounded">

            <TextView
                android:id="@+id/bioTitle_UserProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="0dp"
                android:fontFamily="sans-serif"
                android:text="Biography"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bio_UserProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="3dp"
                android:layout_below="@id/bioTitle_UserProfile"
                android:fontFamily="sans-serif"
                android:text=""
                android:textAlignment="viewStart"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <Button
            android:id="@+id/changeProfileBorder_UserProfile"

            android:layout_width="180dp"
            android:layout_height="53dp"
            android:layout_below="@id/changeProfile_UserProfile"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="-51dp"

            android:backgroundTint="@color/white" />

        <Button
            android:id="@+id/changeProfile_UserProfile"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bioContainer_UserProfile"

            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/black"
            android:drawableLeft="@drawable/ic_baseline_edit_24"
            android:fontFamily="sans-serif"
            android:text="Change Profile"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/logOut_UserProfile"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_below="@id/changeProfile_UserProfile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:backgroundTint="#AA0000"
            android:drawableLeft="@drawable/ic_baseline_logout_24"
            android:fontFamily="sans-serif"
            android:text="Log Out"
            android:textAllCaps="false"
            android:textSize="11dp" />

        //Moved to Log Button
        <!--        <Button-->
        <!--            android:id="@+id/myPosts_UserProfile"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="39dp"-->
        <!--            android:layout_below="@id/changeProfile_UserProfile"-->
        <!--            android:layout_centerHorizontal="true"-->
        <!--            android:layout_marginTop="15dp"-->
        <!--            android:backgroundTint="#cda901"-->
        <!--            android:fontFamily="sans-serif"-->
        <!--            android:text="My Posts"-->
        <!--            android:textAllCaps="false"-->
        <!--            android:textSize="11dp" />-->

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>